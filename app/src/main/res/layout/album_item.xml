<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="album" type="com.northcoders.record_shop_frontend.model.Album"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/background_froseted"
            android:layout_margin="5dp">

        <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginHorizontal="10dp"
                app:srcCompat="@drawable/mishkin"
                android:id="@+id/albumImage"
                android:padding="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                android:background="@drawable/album_background"/>

        <TextView
                android:text="Title:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/albumTitleTag"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@+id/albumImage"
                android:layout_marginTop="8dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="#40FFFFFF"/>

        <TextView
                android:text="@{album.albumTitle}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/albumTitle"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toEndOf="@+id/albumTitleTag"
                android:layout_marginTop="8dp"
                android:textSize="15sp"
                android:textStyle="italic"
                android:background="#40FFFFFF"/>

        <TextView
                android:text="Artist:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/albumArtistTag"
                app:layout_constraintTop_toBottomOf="@+id/albumTitleTag"
                android:layout_marginStart="0dp"
                app:layout_constraintStart_toStartOf="@+id/albumTitleTag"
                android:layout_marginTop="8dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="#40FFFFFF"/>

        <TextView
                android:text="@{album.artist}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/albumArtist"
                app:layout_constraintTop_toBottomOf="@+id/albumTitle"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toEndOf="@+id/albumTitleTag"
                android:layout_marginTop="8dp"
                android:textSize="15sp"
                android:textStyle="italic"
                android:background="#40FFFFFF"/>

        <TextView
                android:text="Genre:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/albumGenreTag"
                app:layout_constraintTop_toBottomOf="@+id/albumArtistTag"
                android:layout_marginStart="0dp"
                app:layout_constraintStart_toStartOf="@+id/albumArtistTag"
                android:layout_marginTop="8dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="#40FFFFFF"/>

        <TextView
                android:text="@{album.genre}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/albumGenre"
                app:layout_constraintTop_toBottomOf="@+id/albumArtist"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toEndOf="@+id/albumTitleTag"
                android:layout_marginTop="8dp"
                android:textSize="15sp"
                android:textStyle="italic"
                android:background="#40FFFFFF"/>

        <TextView
                android:text="Release Year:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/albumReleaseYearTag"
                app:layout_constraintTop_toBottomOf="@+id/albumGenreTag"
                android:layout_marginStart="0dp"
                app:layout_constraintStart_toStartOf="@+id/albumGenreTag"
                android:layout_marginTop="8dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="#40FFFFFF"/>

        <TextView
                android:text="@{album.releaseYear}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/albumReleaseYear"
                app:layout_constraintTop_toBottomOf="@+id/albumGenre"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toEndOf="@+id/albumReleaseYearTag"
                android:layout_marginTop="8dp"
                android:textSize="15sp"
                android:textStyle="italic"
                android:background="#40FFFFFF"/>

        <TextView
                android:text="Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/albumPriceTag"
                app:layout_constraintTop_toBottomOf="@+id/albumReleaseYearTag"
                android:layout_marginTop="8dp"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/albumReleaseYearTag"
                android:background="#40FFFFFF"/>

        <TextView
                android:text="@{album.pricePence}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/albumPrice"
                app:layout_constraintTop_toBottomOf="@+id/albumReleaseYear"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toEndOf="@+id/albumPriceTag"
                android:layout_marginTop="8dp"
                android:textSize="15sp"
                android:textStyle="italic"
                android:background="#40FFFFFF"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:srcCompat="@drawable/edittext"
                android:id="@+id/editButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="5dp"
                app:backgroundTint="@android:color/transparent"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
